{
  "name": "ocean-scraper",
  "version": "1.0.0",
  "description": "FireCrawl-like web crawler service with VPN support",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "mcp:server": "tsx src/mcp-server.ts",
    "mcp:build": "tsc && chmod +x dist/mcp-server.js",
    "mcp:start": "node dist/mcp-server.js",
    "setup": "npm install && npx playwright install && cp .env.example .env && echo 'Setup complete! Run npm run mcp:setup to start MCP server.'",
    "mcp:setup": "docker-compose -f docker/docker-compose.mcp.yml up -d && echo 'MCP infrastructure started. You can now add to Claude Code with: claude mcp add ocean-scraper -s user -- npm run mcp:server'",
    "mcp:status": "docker-compose -f docker/docker-compose.mcp.yml ps",
    "mcp:stop": "docker-compose -f docker/docker-compose.mcp.yml down",
    "verify": "node scripts/verify-setup.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "docker:build": "docker build -t ocean-scraper .",
    "docker:dev": "docker-compose up -d"
  },
  "keywords": [
    "web-scraping",
    "crawler",
    "playwright",
    "vpn"
  ],
  "author": "Ocean-Scraper Team",
  "license": "MIT",
  "dependencies": {
    "@2captcha/captcha-solver": "^1.3.0",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "axios": "^1.6.0",
    "bullmq": "^4.15.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "fake-useragent": "^1.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "pg": "^8.11.0",
    "playwright": "^1.54.1",
    "playwright-extra": "^4.3.6",
    "playwright-extra-plugin-stealth": "^0.0.1",
    "redis": "^4.6.0",
    "turndown": "^7.1.2",
    "user-agents": "^1.1.605",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.34",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.10.0",
    "@types/turndown": "^5.0.3",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
