# Ocean-Scraper Environment Configuration for Unraid
# Copy this to /mnt/user/appdata/ocean-scraper/.env

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ocean_scraper
POSTGRES_USER=ocean_user
POSTGRES_PASSWORD=ocean_secure_password_123

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_123

# VPN Configuration (Private Internet Access)
# Replace with your actual PIA credentials
PIA_USERNAME=your_pia_username
PIA_PASSWORD=your_pia_password
PIA_LOCATION=aus_melbourne  # Melbourne, Australia server
VPN_ENABLED=false  # Set to true when VPN is configured

# API Keys (Generate secure keys for production)
API_KEYS=production-key-change-this-123

# Browser Configuration for Unraid
BROWSER_HEADLESS=true
BROWSER_MAX_INSTANCES=3
BROWSER_TIMEOUT=30000

# Security and Performance
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_CRAWL_DEPTH=3
MAX_PAGES_PER_CRAWL=50
REQUEST_DELAY_MS=1000

# Anti-Bot Configuration
ANTI_BOT_ENABLED=true
STEALTH_MODE=true
FINGERPRINT_ROTATION=true
HUMAN_BEHAVIOR=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS (restrict in production)
CORS_ORIGIN=*do 