# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ocean_scraper
POSTGRES_USER=ocean_user
POSTGRES_PASSWORD=ocean_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# VPN Configuration (Private Internet Access)
PIA_USERNAME=your_pia_username
PIA_PASSWORD=your_pia_password
PIA_REGION=us-east
VPN_ENABLED=true

# IP Protection (set to your actual IP for safety checks)
USER_REAL_IP=your.real.ip.address

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Browser Configuration
MAX_BROWSER_INSTANCES=5
BROWSER_TIMEOUT=30000
BROWSER_HEADLESS=true

# Scraping Configuration
DEFAULT_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
MAX_CRAWL_DEPTH=3
MAX_PAGES_PER_CRAWL=100
REQUEST_DELAY_MS=1000

# Security
API_KEY_HEADER=X-API-Key
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Anti-Bot Evasion Configuration
ANTI_BOT_ENABLED=true
STEALTH_MODE=true
FINGERPRINT_ROTATION=true
HUMAN_BEHAVIOR=true
CAPTCHA_SOLVING=true
MAX_CONTEXT_ROTATIONS=10
ANTI_BOT_RETRY_ATTEMPTS=3
ANTI_BOT_RETRY_DELAY=1000

# CAPTCHA Solving Configuration (2Captcha)
CAPTCHA_API_KEY=your_2captcha_api_key
TWOCAPTCHA_API_KEY=your_2captcha_api_key
CAPTCHA_TIMEOUT=300000
CAPTCHA_POLLING_INTERVAL=10000
CAPTCHA_MAX_RETRIES=3

# Human Behavior Simulation
HUMAN_MOUSE_MOVEMENT=true
HUMAN_RANDOM_SCROLLING=true
HUMAN_TYPING_DELAY=true
HUMAN_READING_PAUSES=true
MIN_READING_TIME=2000
MAX_READING_TIME=10000